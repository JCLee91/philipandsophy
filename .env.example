# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# reCAPTCHA Enterprise (Firebase App Check)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
NEXT_PUBLIC_RECAPTCHA_PROJECT_ID=your_recaptcha_project_id

# Naver Search API (책 검색) - 서버 사이드 전용
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Firebase Admin Service Account (Migration Scripts Only)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# =============================================================================
# Matching System (v2.0 - Random Matching)
# =============================================================================
# Functions URL for matching preview (Cloud Run)
MANUAL_MATCHING_URL=https://manualmatchingpreview-vliq2xsjqa-du.a.run.app

# Internal service secret (Functions ↔ Next.js API 인증)
INTERNAL_SERVICE_SECRET=your_internal_secret

# =============================================================================
# AI Provider Configuration (Deprecated - v1.0 AI Matching 전용)
# =============================================================================
# @deprecated v2.0 랜덤 매칭에서는 미사용
# Choose one provider: openai, anthropic, google
AI_PROVIDER=openai

# Model name based on provider:
# - OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo
# - Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
# - Google: gemini-1.5-pro, gemini-1.5-flash
AI_MODEL=gpt-4o-mini

# API Keys (only provide the key for your chosen provider)
# @deprecated v2.0에서는 미사용
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_GENERATIVE_AI_API_KEY=...

# =============================================================================
# Push Notifications
# =============================================================================
# Firebase Cloud Messaging (FCM) - Push Notifications (Android/Desktop)
NEXT_PUBLIC_FCM_VAPID_KEY=your_fcm_vapid_key

# Standard Web Push API - VAPID Keys (iOS Safari + All Platforms)
NEXT_PUBLIC_WEBPUSH_VAPID_KEY=your_webpush_public_key
WEBPUSH_VAPID_PRIVATE_KEY=your_webpush_private_key

# =============================================================================
# Airtable Integration (CRM 연동)
# =============================================================================
# Airtable Personal Access Token
AIRTABLE_API_KEY=pat...

# Airtable Base ID
AIRTABLE_BASE_ID=app...

# Airtable Table ID
AIRTABLE_TABLE_ID=tbl...

# Airtable View ID (특정 뷰만 조회)
AIRTABLE_VIEW_ID=viw...

# Current Cohort ID for new applicants
CURRENT_COHORT_ID=6

# =============================================================================
# Cron Job Configuration
# =============================================================================
# Cron job authentication secret (Vercel에서 자동 설정)
CRON_SECRET=your_cron_secret
