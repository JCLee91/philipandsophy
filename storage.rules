rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ============================================
    // 프로덕션 모드 - Storage 보안 규칙
    // ============================================
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isUnder50MB() {
      return request.resource.size < 50 * 1024 * 1024;
    }

    function isUnder10MB() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // ============================================
    // 독서 인증 이미지 (Reading Submissions)
    // ============================================
    match /reading_submissions/{participationCode}/{fileName} {
      // 읽기: 모두 허용 (공개 이미지)
      allow read: if true;
      
      // 업로드: 이미지 파일만, 50MB 이하
      allow create: if isValidImage() && isUnder50MB();
      
      // 수정/삭제: 금지
      allow update, delete: if false;
    }
    
    // ============================================
    // 공지사항 이미지 (Notices)
    // ============================================
    match /notices/{cohortId}/{fileName} {
      // 읽기: 모두 허용 (공개 이미지)
      allow read: if true;
      
      // 업로드: 이미지 파일만, 10MB 이하
      // TODO: 관리자만 업로드 가능하도록 제한 권장
      allow create: if isValidImage() && isUnder10MB();
      
      // 수정/삭제: 금지
      allow update, delete: if false;
    }
    
    // ============================================
    // 다이렉트 메시지 이미지 (Direct Messages)
    // ============================================
    match /direct_messages/{userId}/{fileName} {
      // 읽기: 모두 허용 (대화 참여자만 URL 알고 있음)
      allow read: if true;
      
      // 업로드: 이미지 파일만, 50MB 이하
      allow create: if isValidImage() && isUnder50MB();
      
      // 수정/삭제: 금지
      allow update, delete: if false;
    }
    
    // ============================================
    // 프로필 이미지 (Profiles)
    // ============================================
    match /profiles/{userId}/{fileName} {
      // 읽기: 모두 허용 (공개 프로필)
      allow read: if true;
      
      // 업로드: 이미지 파일만, 50MB 이하
      allow create: if isValidImage() && isUnder50MB();
      
      // 수정: 본인만 (Firebase Auth 필요)
      // 임시: 허용
      allow update: if isValidImage() && isUnder50MB();
      
      // 삭제: 금지
      allow delete: if false;
    }
    
    // ============================================
    // 기타 경로: 모두 차단
    // ============================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


